<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<bean id="VmResourcesJob" class="org.springframework.scheduling.quartz.JobDetailBean">
		<property name="name" value="VmResourcesJobBean"></property>
		<property name="jobClass" value="com.icp.monitor.displayer.jobs.VmResourcesJobBean"></property>
	</bean>
	
	<bean id="VmResourcesJobTriggerBean" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="VmResourcesJob"></property>
		<!-- <property name="cronExpression" value="0/10 * * * * ?"></property> -->
		<property name="cronExpression" value="0 */10 * * * ?"></property> 
	</bean>
	
</beans>