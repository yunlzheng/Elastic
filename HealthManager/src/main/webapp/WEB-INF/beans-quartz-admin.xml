<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<bean id="AdminVmStatusCollectJob" class="org.springframework.scheduling.quartz.JobDetailBean">
		<property name="name" value="AdminVmStatusCollectJob1"></property>
		<property name="jobClass" value="com.icp.monitor.displayer.jobs.AdminVmStatusCollectJobBean"></property>
	</bean>

	<bean id="AdminVMStatusCollectorCronTriggerBean" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<ref bean="AdminVmStatusCollectJob"/>
		</property>
		<property name="cronExpression" value="0 */30 * * * ?"></property> 
		 <!--<property name="cronExpression" value="0/5 * * * * ?"></property>-->
	</bean>
	
</beans>
