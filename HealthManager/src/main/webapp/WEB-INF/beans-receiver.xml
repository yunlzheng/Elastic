<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
http://cxf.apache.org/jaxrs
http://cxf.apache.org/schemas/jaxrs.xsd">

	<!-- Dao 配置 -->
	<bean id="ReceiverServerConfigDao" class="com.icp.monitor.commons.dao.impl.ServerConfigDaoImpl">
		<constructor-arg>
			<value>com.icp.monitor.commons.bean.ServerConfig</value>
		</constructor-arg>
		<property name="sessionFactory">
			<ref bean="receiverSessionFactory" />
		</property>
	</bean>
	
	<bean id="ReceiverMonitorLogDao" class="com.icp.monitor.commons.dao.impl.MonitorLogDaoImpl">
		<constructor-arg>
			<value>com.icp.monitor.commons.bean.MonitorLog</value>
		</constructor-arg>
		<property name="sessionFactory">
			<ref bean="receiverSessionFactory" />
		</property>
	</bean>
	
	<bean id="ReceiverLBStatusDao" class="com.icp.monitor.commons.dao.impl.LBStatusDaoImpl">
		<constructor-arg>
			<value>com.icp.monitor.commons.bean.LBStatus</value>
		</constructor-arg>
		<property name="sessionFactory">
			<ref bean="receiverSessionFactory" />
		</property>
	</bean>
	
	<bean id="ReceiverLBStatusBackendDao" class="com.icp.monitor.commons.dao.impl.LBStatusBackendDaoImpl">
		<constructor-arg>
			<value>com.icp.monitor.commons.bean.LBStatusBackend</value>
		</constructor-arg>
		<property name="sessionFactory">
			<ref bean="receiverSessionFactory" />
		</property>
	</bean>
	
	<bean id="ReceiverMonitorThresholdDao"
		class="com.icp.monitor.commons.dao.impl.MonitorThresholdDaoImpl">
		<constructor-arg>
			<value>com.icp.monitor.commons.bean.MonitorThreshold</value>
		</constructor-arg>
		<property name="sessionFactory">
			<ref bean="receiverSessionFactory" />
		</property>
	</bean>
	
	<bean id="ReceiverMemberDao" class="com.icp.monitor.commons.dao.impl.MemberDaoImpl">
		<constructor-arg>
			<value>com.icp.monitor.commons.bean.Member</value>
		</constructor-arg>
		<property name="sessionFactory">
			<ref bean="receiverSessionFactory" />
		</property>
	</bean>
	<bean id="ReceiverAlertMemberDao" class="com.icp.monitor.commons.dao.impl.AlertMemberDaoImpl">
		<constructor-arg>
			<value>com.icp.monitor.commons.bean.AlertMember</value>
		</constructor-arg>
		<property name="sessionFactory">
			<ref bean="receiverSessionFactory" />
		</property>
	</bean>
	
	<bean id="ReceiverAlertMessageDao" class="com.icp.monitor.commons.dao.impl.AlertMessageDaoImpl">
		<constructor-arg>
			<value>com.icp.monitor.commons.bean.AlertMessage</value>
		</constructor-arg>
		<property name="sessionFactory">
			<ref bean="receiverSessionFactory" />
		</property>
	</bean>
	
	<bean id="ReceiverExceptionDao" class="com.icp.monitor.commons.dao.impl.ExceptionDaoImpl">
		<constructor-arg>
			<value>com.icp.monitor.commons.bean.ExceptionMessage</value>
		</constructor-arg>

		<property name="sessionFactory">
			<ref bean="receiverSessionFactory" />
		</property>
	</bean>
	
	<bean id="AppMonitorLogDao" class="com.icp.monitor.commons.dao.impl.AppMonitorLogDaoImpl">
		<constructor-arg>
			<value>com.icp.monitor.commons.bean.AppMonitorLog</value>
		</constructor-arg>
		
		<property name="sessionFactory">
			<ref bean="receiverSessionFactory" />
		</property>
	</bean>
	
	<!-- 非Dao类管理 -->
	<bean id="TenantVMStatusThreadManager" class="com.icp.monitor.displayer.thread.manager.ThreadManager"></bean>
	<bean id ="LBStatusCollectTimeTask" class="com.icp.monitor.displayer.servlet.LBStatusCollectTimeTask"/>
	<bean id ="AdminVMStatusCollectorTimeTask" class="com.icp.monitor.displayer.servlet.AdminVMStatusCollectorTimeTask"/>
	
	
	
</beans>
